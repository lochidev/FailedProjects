@model ApplicationUser
@{
    ViewData["Title"] = "Profile";
}

<div class="items-center justify-center flex font-bold">
    <div class="text-green-500 p-4 sm:p-16 rounded-xl shadow-2xl">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-extrabold mb-6 md:mb-10">@ViewData["Title"]</h2>
        <h3 class="text-2xl md:text-3xl text-left font-extrabold mb-6">Welcome to your dinglevalley account. You'll see all the details we have about you below</h3>
        <div class="shadow-lg text-xl">
            <p class="text-left mb-3">Username: @Model.UserName</>
            <p class="text-left mb-6">Email: @Model.Email</p>
            <a class="block w-full bg-red-800 hover:bg-red-700 p-4 rounded text-gray-400 transition duration-300 mb-3" asp-action="DeleteConfirmation" asp-controller="Manage">Delete Account</a>
            <a class="block w-full bg-green-700 hover:bg-green-600 p-4 rounded text-gray-700 transition duration-300" asp-action="Logout" asp-controller="Account">Logout</a>
        </div>
    </div>
</div>
